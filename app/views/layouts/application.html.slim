doctype html
html
  head
    title
      | RemainingSupplements
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    meta content="width=device-width,initial-scale=1" name="viewport"
  body
    header
      nav
        .nav-container
          .app-name
            h2  Remaining supplement
          .nav-items
            - if user_signed_in?
              = link_to  edit_user_registration_path, class: 'nav-item' do
                | プロフィール変更
              = link_to destroy_user_session_path, method: :delete, class: 'nav-item' do
                | ログアウト
            - else
              = link_to new_user_registration_path, class: 'nav-item' do
                | サインアップ
              = link_to new_user_session_path, class: 'nav-item' do
                | ログイン
    .container
      - if flash.notice.present?
        .alert.alert-success= flash.notice
    = yield
